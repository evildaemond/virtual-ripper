{
    "rulename": "Ignore Windows Directories",
    "selector": "None",
    "operation": "filesystem",
    "rule": {
        "matchtype": "partialpath",
        "action": "ignore",
        "match": [
            "winsxs",
            "syswow64",
            "system32",
            "systemapps",
            "windows\\servicing",
            "servicing",
            "Microsoft\\.NET\\Framework",
            "windows\\immersivecontrolpanel",
            "windows\\diagnostics",
            "windows\\debug",
            "locale",
            "chocolatey\\helpers",
            "sources\\sxs",
            "localization",
            "AppData\\Local\\Microsoft",
            "AppData\\Roaming\\Microsoft\\Windows",
            "AppData\\Roaming\\Microsoft\\Teams",
            "wsuscontent",
            "Application Data\\Microsoft\\CLR Security Config",
            "servicing\\LCU",
            "bitlockerdiscoveryvolumecontents"
        ]
    }
}